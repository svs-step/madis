{% extends 'User/Security/base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'user.security.title.reset_password'|trans }}{% endblock %}

{% block body %}
    <div class="login-logo">
        <b>Madis</b>
    </div>
    <div class="login-box-body">
        <p class="login-box-msg">{{ 'user.security.reset_password.verbatim'|trans }}</p>

        {{ include('_flashbag.html.twig') }}

        {{ form_start(form) }}
        {{ form_row(form.plainPassword) }}
        <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'global.action.submit'|trans }}</button>
        {{ form_end(form) }}

    </div>
{% endblock %}
