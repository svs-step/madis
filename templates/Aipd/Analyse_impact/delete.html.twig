{% extends 'base.html.twig' %}

{% set bodyClass = 'aipd_analyse_impact delete' %}
{% set menuItem = 'aipd_analyse_impact' %}

{% block title %}{{ 'aipd.analyse_impact.title.delete'|trans }} - {{ parent() }}{% endblock %}

{% block body_head %}
    <h1>
        {{ 'aipd.analyse_impact.title.delete'|trans }}
        <small>{{ 'aipd.analyse_impact.title.subtitle_delete'|trans({ '%object%': object.conformiteTraitement.traitement.name, '%date%': object.createdAt|date('d/m/Y') }) }}</small>
    </h1>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        { 'name': 'aipd.analyse_impact.breadcrumb.list'|trans, 'link': path('aipd_analyse_impact_list') },
        { 'name': 'aipd.analyse_impact.breadcrumb.delete'|trans }
    ] %}
    {% include '_breadcrumb.html.twig' with {'breadcrumb': breadcrumb} %}
{% endblock %}


{% block body %}
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-header"></div>
                <div class="box-body">
                    <p>{{ 'aipd.analyse_impact.label.delete_confirm'|trans({ '%object%': object.conformiteTraitement.traitement.name, '%date%': object.createdAt|date('d/m/Y') }) }}</p>
                </div>
                <div class="box-footer">
                    <a href="{{ path('aipd_analyse_impact_list') }}" class="btn btn-default">
                        {{ 'global.action.back_to_list'|trans }}
                    </a>
                    <a href="{{ path('aipd_analyse_impact_delete_confirm', { 'id': object.id }) }}" class="btn btn-primary">
                        {{ 'global.action.confirm_delete'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
