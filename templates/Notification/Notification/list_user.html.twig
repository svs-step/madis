{% extends 'base.html.twig' %}

{% set bodyClass = 'notification_notification list' %}
{% set menuItem = 'notification_notification' %}

{% set notifs = objects|map(n => ({id : n.id, read_at: n.readAt})) %}

{# FILTER ACTION INIT #}
{% set activeActions = [] %}
{% for object in objects %}
    {% if object.action not in activeActions %}
        {% set activeActions = activeActions|merge([object.action]) %}
    {% endif %}
{% endfor %}

{# FILTER MODULE INIT #}
{% set activeModules = [] %}
{% for object in objects %}
    {% if object.module not in activeModules %}
        {% set activeModules = activeModules|merge([object.module]) %}
    {% endif %}
{% endfor %}

{% block title %}{{ 'notification.notification.title.list'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap.min.css">
{% endblock %}

{% block body_head %}
    <h1>{{ 'notification.notification.title.list'|trans }}</h1>
{% endblock %}

{% block breadcrumb %}
    {% set breadcrumb = [
        { 'name': 'notification.notification.title.list'|trans }
    ] %}
    {% include '_breadcrumb.html.twig' with {'breadcrumb': breadcrumb} %}
{% endblock %}

{% block body %}
    <div class="dt-button-background" style=""></div>
    <div class="row">
        <div class="col-xs-12">
            <div class="box box-solid">
                <div class="box-body">
                    <div class="dt-buttons">
                        <a id="read-all" style="float:right;" href="{{ path('notification_notification_mark_as_read_all') }}">{{ 'notification.notification.action.mark_as_read_all'|trans }}</a>
                    </div>
                    <table role="presentation" id="table" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th scope="col">
                                    <select class="form-control" id="search_module" style="width: 100%;"> 
                                            <option value="">{{ 'notification.notification.list.module'|trans }}</option>
                                        {% for module in activeModules %}
                                            <option value="{{ module|trans }}">
                                                {{ module|trans }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </th>
                                <th scope="col">
                                    <select class="form-control" id="search_action" style="width: 100%;"> 
                                            <option value="">{{ 'notification.notification.list.action'|trans }}</option>
                                        {% for action in activeActions %}
                                            <option value="{{ action|trans }}">
                                                {{ action|trans }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </th>
                                <th scope="col">
                                    <input class="form-control" type="text" id="search_name" placeholder="Nom" style="width: 100%;">
                                </th>
                                <th scope="col">
                                    <select class="form-control" id="search_object" style="width: 100%;">
                                        <option value="" selected>{{ 'notification.notification.list.object'|trans }}</option>
                                    </select>
                                </th>
                                <th scope="col">
                                    <div id="search_date" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                        <i class="fa fa-calendar"></i>&nbsp;
                                        <span></span> <i class="fa fa-caret-down"></i>
                                    </div>

                                </th>
                                <th scope="col">
                                    <input class="form-control" type="text" id="search_user_name" placeholder="Nom" style="width: 100%;">
                                </th>
                            </tr>
                            <tr>
                                <th scope="col">{{ 'notification.notification.list.module'|trans }}</th>
                                <th scope="col">{{ 'notification.notification.list.action'|trans }}</th>
                                <th scope="col">{{ 'notification.notification.list.name'|trans }}</th>
                                <th scope="col">{{ 'notification.notification.list.object'|trans }}</th>

                                <th scope="col">{{ 'notification.notification.list.date'|trans }}</th>
                                <th scope="col">{{ 'notification.notification.list.user'|trans }}</th>

                            </tr>
                        </thead>
                        <tbody>
                        {% for notification in objects %}
                            <tr>
                                <td>{{ notification.module|trans }}</td>
                                <td>{{ notification.action|trans }}</td>
                                <td>
                                    <a aria-label="{{notification.name}}" href="{{ notification | link }}">
                                        {{notification.name}}
                                    </a>
                                </td>

                                <td>
                                    {{ notification.object.name }}
                                </td>
                                <td>{{ notification.createdAt|date('d/m/Y') }}</td>
                                <td>{{notification.createdBy}}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://unpkg.com/moment@2.12.0/moment.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>

<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-throttle-debounce/1.1/jquery.ba-throttle-debounce.js"></script>
    {% set dataTableOptions = {
        columns: [
            {"data": "module"},
            {"data": "action"},
            {"data": "name"},
            {"data": "object"},
            {"data": "date"},
            {"data": "user"},
        ],
        order: [[4,'desc']],
        language: {
            buttons: {
                colvis: "Colonnes"
            },
        },
        dom: 'Bfrtip',
        buttons: [
            {
                extend: 'colvis',
                columns: ':not(.noVis)'
            }
        ]
    } %}

