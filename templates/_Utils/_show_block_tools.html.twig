{% if tools|length > 0 %}
    <ul>
        {% for tool in tools %}
            <li>
                <a href="{{ path('registry_tool_show', { id: tool.id }) }}">
                    {{ tool.name }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <span><i>{{ 'global.label.no_linked_tool'|trans }}</i></span>
{% endif %}
